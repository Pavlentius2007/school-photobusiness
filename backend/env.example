# Основные настройки
PROJECT_NAME="Онлайн-платформа обучения"
API_V1_STR="/api/v1"
DEBUG=true

# База данных
DATABASE_URL="postgresql://user:password@localhost/learning_platform"
DB_USER=user
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=learning_platform

# Redis
REDIS_URL="redis://localhost:6379/0"

# JWT
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8080"]

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Платежные системы

# YuKassa
YUKASSA_SHOP_ID=your-yukassa-shop-id
YUKASSA_SECRET_KEY=your-yukassa-secret-key

# Сбербанк (рассрочка)
SBERBANK_USERNAME=your-sberbank-username
SBERBANK_PASSWORD=your-sberbank-password
SBERBANK_RETURN_URL=https://your-domain.com/payment/return

# Email уведомления
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@your-domain.com

# Telegram уведомления
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# CloudPayments
CLOUDPAYMENTS_PUBLIC_ID=your-cloudpayments-public-id
CLOUDPAYMENTS_API_SECRET=your-cloudpayments-api-secret

# Stripe
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Файлы
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/gif", "application/pdf", "application/msword", "application/vnd.openxmlformats-officedocument.wordprocessingml.document", "video/mp4", "video/webm"]

# Безопасность
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Логирование
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Кэширование
CACHE_TTL=3600

# Пагинация
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100 